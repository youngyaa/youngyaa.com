<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="module" method="upgrade">
	<name>Events Booking View</name>
	<author>Tuan Pham Ngoc</author>
	<authorEmail>contact@joomdonation.com</authorEmail>
	<authorUrl>http://www.joomdonation.com</authorUrl>
	<copyright>Copyright (C) 2012 - 2015 Ossolution Team</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>Aug 2015</creationDate>
	<version>2.0.4</version>
	<description>This module is used to display any view in Events Booking extension.</description>
	<files>
		<filename module="mod_eb_view">mod_eb_view.php</filename>
		<filename>index.html</filename>		
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text"
							label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX">
				</field>
				<field name="view" type="list" label="View" description="Choose the view you want to display">
					<option value="calendar">Calendar</option>					
					<option value="categories">Categories</option>					
					<option value="category">Category</option>
					<option value="event">Event Detail</option>
					<option value="upcomingevents">Upcoming Events</option>
					<option value="register">Registration Form</option>
					<option value="archive">Events Archive</option>
					<option value="history">Registration History</option>					
				</field>						
				<field name="query_string" type="text" class="input-xxlarge" default="" label="Query String" description="Query string which will ba passed to the view."/>
			</fieldset>
		</fields>	
	</config>
</extension>