                   description="COM_BT_MEDIA_OPTION_SHOW_ORDER_TYPE_DESC"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="ASC">ASC</option>
                <option value="DESC">DESC</option>
            </field>
        </fieldset>
    </fields>
