<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="osmembership" method="upgrade">
	<name>OS Membership - Articles restriction settings</name>
	<author>Tuan Pham Ngoc</author>
	<authorEmail>contact@joomdonation.com</authorEmail>
	<authorUrl>http://www.joomdonation.com</authorUrl>
	<copyright>Copyright (C) 2012 - 2016 Ossolution Team</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>Nov 2012</creationDate>
	<version>2.0.7</version>
	<description>This plugin is used to restrict access to Joomla artciles which subscribers of a plan can access to</description>
	<files>
		<filename plugin="articles">articles.php</filename>		
	</files>	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="category_ids" show_root="true" type="category"
					extension="com_content" multiple="true" size="10" label="CONTENT_CATEGORY"
					description="CONTENT_CATEGORY_DESC" />	
			</fieldset>
		</fields>
	</config>				
</extension>
