<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system">
    <name>CloudFlare Plugin</name>
    <author>CloudFlare</author>
    <creationDate>September 2013</creationDate>
    <authorEmail>partners@cloudflare.com</authorEmail>
    <authorUrl>http://cloudflare.com</authorUrl>
    <version>3.5.0</version>
    <description>Displays proper visitor IP addresses for CloudFlare-enabled Joomla sites. This plugin is not required if the web server is already running mod_cloudflare.</description>
    <files>
        <filename plugin="cloudflare">cloudflare.php</filename>
        <filename>IpRange.php</filename>
        <filename>IpRewrite.php</filename>
    </files>
    <params>
        <param name="cloudflare" type="text" default="" label="CloudFlare" />
    </params>
</extension>
